{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "jsx": "react-jsx",
      "module": "ESNext",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": [
      "src/**/*.js", 
      "src/**/*.jsx",
      "tailwind.config.js"
    ],
    "exclude": [
      "node_modules",
      "build",
      "dist"
    ]
  }
  